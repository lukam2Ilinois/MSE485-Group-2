units           metal
atom_style      atomic
boundary        p p p

read_data       starting_config_1int_relaxed.dat

mass            1 28.0855

pair_style      sw
pair_coeff      * * Si.sw Si

neighbor        2.0 bin
neigh_modify    delay 0 every 1 check yes

timestep        0.001      # 1 fs

# Start at 300 K and heat to 1000 K
velocity        all create 300.0 12345 mom yes rot no dist gaussian
fix             1 all nvt temp 300.0 1000.0 0.1

thermo          10000
thermo_style    custom step temp pe ke etotal

# Dump every 100 steps => 0.1 ps between raw frames
dump            d1 all custom 100 state_dump_1int id type x y z vx vy vz
dump_modify     d1 sort id

# 10,000,000 steps = 10 ns
run             10000000

unfix           1
write_data      FINAL_STRUCTURE_1int

